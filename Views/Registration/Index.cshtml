@model IEnumerable<ConferenceManagementSystem.Models.Registration>

@{
    ViewData["Title"] = "Conference Registrations";
}

<h2 class="mb-4">Conference Registrations</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-success">➕ Add New Registration</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
    <tr>
        <th scope="col">Conference Title</th>
        <th scope="col">Attendee Email</th>
        <th scope="col" class="text-center">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Conference.Title)</td>
            <td>@Html.DisplayFor(modelItem => item.Attendee.Email)</td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">✏️ Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">📄 Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">🗑️ Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>