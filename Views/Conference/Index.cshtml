@model List<ConferenceManagementSystem.Models.Conference>

<h2 class="mb-4">Conferences</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-success">➕ Create New Conference</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
    <tr>
        <th scope="col">Title</th>
        <th scope="col">Date</th>
        <th scope="col">Location</th>
        <th scope="col" class="text-center">Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var conf in Model)
    {
        <tr>
            <td>@conf.Title</td>
            <td>@conf.Date.ToString("MMM dd, yyyy")</td>
            <td>@conf.Location</td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@conf.Id" class="btn btn-sm btn-warning">✏️ Edit</a>
                <a asp-action="Details" asp-route-id="@conf.Id" class="btn btn-sm btn-info">📄 Details</a>
                <a asp-action="Delete" asp-route-id="@conf.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">🗑️ Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>